if [ "${XDG_SESSION_TYPE}" == wayland ]; then
    export QT_QPA_PLATFORM=wayland
    export MOZ_ENABLE_WAYLAND=1
    CODE_FLAGS_CONF="${HOME}/.config/code-flags.conf"
    if [[ ! -e "${CODE_FLAGS_CONF}" ]]; then
        echo '--enable-features=UseOzonePlatform' >> "${CODE_FLAGS_CONF}"
        echo '--ozone-platform=wayland' >> "${CODE_FLAGS_CONF}"
    fi
else
    rm -f "${CODE_FLAGS_CONF}"
fi
